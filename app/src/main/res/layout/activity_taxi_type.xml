<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.handycartaxi.taxiappproject.TaxiTypeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escoga el tipo de Taxi"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:checkedButton="@+id/regularOption" >


        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Unidad Regular"
            android:id="@+id/regularOption"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:checked="true"
            android:focusable="true"
            android:enabled="true" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Minibus"
            android:id="@+id/minubusOption"
            android:checked="false"
            android:layout_below="@+id/regularOption"
            android:layout_alignLeft="@+id/regularOption"
            android:layout_alignStart="@+id/regularOption"
            android:layout_marginTop="15dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Unidad Confortable"
            android:id="@+id/confortableOption"
            android:checked="false"
            android:layout_below="@+id/minubusOption"
            android:layout_alignLeft="@+id/minubusOption"
            android:layout_alignStart="@+id/minubusOption"
            android:layout_marginTop="15dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Unidad Especial"
            android:id="@+id/especialOption"
            android:checked="false"
            android:layout_below="@+id/minubusOption"
            android:layout_alignLeft="@+id/confortableOption"
            android:layout_alignStart="@+id/confortableOption"
            android:layout_marginTop="15dp" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancelarbtn"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedir!"
        android:id="@+id/pedirButton2"
        android:layout_above="@+id/cancelarbtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Al presionar Pedir, usted acepta nuestros TÃ©rminos y Condiciones"
        android:id="@+id/minutos"
        android:layout_above="@+id/pedirButton2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Compania"
        android:id="@+id/companiaTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
