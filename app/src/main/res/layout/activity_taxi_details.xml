<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.handycartaxi.taxiappproject.TaxiDetailsActivity"
    >

    <TextView
        android:id="@+id/taxistaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NombreTaxista"
        android:layout_below="@+id/taxistaFoto"
        android:layout_alignLeft="@+id/taxistaVehiculo"
        android:layout_alignStart="@+id/taxistaVehiculo" />

    <TextView
        android:id="@+id/taxistaUnidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#Unidad"
        android:layout_below="@+id/taxistaNombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/taxistaMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricula"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/taxistaUnidad"
        android:layout_alignLeft="@+id/taxistaUnidad"
        android:layout_alignStart="@+id/taxistaUnidad" />

    <TextView
        android:id="@+id/taxistaVehiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Color Vehiculo"
        android:layout_below="@+id/taxistaMatricula"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/taxistaFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user1"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Este es su taxi"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/taxistaNombre"
        android:layout_alignStart="@+id/taxistaNombre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancelarBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/vehicle"
        android:layout_below="@+id/taxistaVehiculo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
